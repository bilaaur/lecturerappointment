<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#e5d9f2"
    android:elevation="4dp"
    android:padding="16dp"
    android:layout_marginBottom="16dp">

    <ImageView
        android:id="@+id/faculty_logo"
        android:layout_width="113dp"
        android:layout_height="97dp"
        android:contentDescription="Faculty Logo"
        android:padding="1dp"
        android:src="@drawable/computing" />

    <TextView
        android:id="@+id/faculty_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COMPUTING"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:textColor="#d4bee4" />

    <Spinner
        android:id="@+id/major_spinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:layout_marginTop="8dp"
        android:background="#d4bee4"
        android:textColor="#ffffff"
        android:padding="8dp">
    </Spinner>
</LinearLayout>